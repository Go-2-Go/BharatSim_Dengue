{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": false,
    "codeFrame": false
  },
  "extends": [
    "airbnb",
    "prettier"
  ],
  "env": {
    "browser": true,
    "jest": true
  },
  "overrides": [
    {
      "files": [
        "*.test.js"
      ],
      "rules": {
        "no-unused-expressions": "off",
        "react/prop-types": "off",
        "arrow-body-style": "warn"
      }
    }
  ],
  "ignorePatterns": ["setupTests.js"],
  "rules": {
    "max-len": [
      "warn",
      {
        "code": 120
      }
    ],
    "prefer-promise-reject-errors": [
      "off"
    ],
    "react/jsx-filename-extension": [
      "off"
    ],
    "react/prop-types": [
      "warn"
    ],
    "no-return-assign": [
      "off"
    ],
    "no-console": [
      "warn"
    ],
    "import/prefer-default-export": [
      "off"
    ]
  }
}
